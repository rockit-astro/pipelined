[TYPECHECK]
ignored-modules = astropy.units
disable = broad-except, too-few-public-methods, missing-docstring, invalid-name

[MASTER]
extension-pkg-whitelist = sep

[SIMILARITIES]
min-similarity-lines = 25
ignore-imports = yes

[FORMAT]
max-line-length=120

[DESIGN]
max-args = 10
max-locals = 50
max-attributes = 25
max-statements = 100
